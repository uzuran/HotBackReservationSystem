<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotBackReservationSystem.MainPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="hotback.png"
                SemanticProperties.Description="Hotback logo."
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Welcome to Hotback!"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text= "Create reservation for our services."
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Reservation creation"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="CreateReservation"
                Text="Create reservation"
                SemanticProperties.Hint="Go to the reservation page"
                Clicked="GoToReservationPage"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
