<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotBackReservationSystem.TimeReservationPage"
             Title="Time Reservation">
    <VerticalStackLayout>
        <Label 
            Text="Choese time reservation"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            />


        <Button
                x:Name="CreateReservation"
                Text="Create your reservation"
                SemanticProperties.Hint="Go to the registration success page"
                Clicked="GoToReservationSuccessPage"
                HorizontalOptions="Center" />


    </VerticalStackLayout>
</ContentPage>